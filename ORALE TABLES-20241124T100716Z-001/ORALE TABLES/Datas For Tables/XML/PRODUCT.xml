CREATE TABLE  "PRODUCT" 
   (	"ID" NUMBER NOT NULL ENABLE, 
	"NAME" VARCHAR2(32) NOT NULL ENABLE, 
	"DESCRIPTION" VARCHAR2(1024) NOT NULL ENABLE, 
	"PRICE" FLOAT(126) NOT NULL ENABLE, 
	"STOCK" NUMBER NOT NULL ENABLE, 
	"MINORDER" NUMBER NOT NULL ENABLE, 
	"MAXORDER" NUMBER NOT NULL ENABLE, 
	"ALLERGYINFO" VARCHAR2(256) NOT NULL ENABLE, 
	"CATEGORY" VARCHAR2(32) NOT NULL ENABLE, 
	"SHOP_ID" NUMBER NOT NULL ENABLE, 
	"IMAGE" VARCHAR2(256) NOT NULL ENABLE, 
	"DISCOUNTPERCENT" NUMBER DEFAULT NULL, 
	"DISCOUNTEDPRICE" FLOAT(126) DEFAULT NULL, 
	"RATING" NUMBER DEFAULT NULL, 
	 PRIMARY KEY ("ID") ENABLE
   )
/
ALTER TABLE  "PRODUCT" ADD FOREIGN KEY ("SHOP_ID")
	  REFERENCES  "SHOP" ("SHOP_ID") ENABLE
/

CREATE OR REPLACE TRIGGER  "PRODUCTID_AITRIGGER" BEFORE INSERT ON PRODUCT FOR EACH ROW   WHEN (new.ID IS NULL) begin 
:new.ID:= SEQ_PRODUCTID.nextVal; 
END; 

/
ALTER TRIGGER  "PRODUCTID_AITRIGGER" ENABLE
/
